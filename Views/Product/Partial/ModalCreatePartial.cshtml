<template id="categoryOptionTemplate">
  <option value=""></option>
</template>

<!-- Modal -->

<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Product</h5>
        <button type="button" id="addProdClose" class="btn-close btn-light" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body createContent">
        <form id="addProdForm" >
            <div class="form-group" >
                <label name="" class="control-label">Category</label>
                <select id="catSelect" name="Category" class="form-select" style="width: 18rem;"></select>
            </div>
            <div class="form-group">
                <label name="" class="control-label">Product Name</label>
                <input name="Name" class="productNameField"style="width: 18rem;" />
            </div>
            <br>
            <style>
              .productNameField{
                position: relative;
                top: 27px;
                left: -105px;
                width: 18px;
                height: 35px;
                border-radius: 5px;
               
                
              }
               .productNameField:focus{
                @* outline: 2px solid green; *@
                border: 2px solid green;
               }
            </style>
           
            <div class="form-group">
                <label name="" class="control-label">Units</label>
                <input name="Units" class="unitsField" required style="width: 18rem;">
            </div>
          <br>
            <style>
              .unitsField{
                position: relative;
                top: 27px;
                left: -40px;
                width: 18px;
                height: 35px;
                border-radius: 5px;
                
              }
            </style>

            <div class="form-group">
                <label name="" class="control-label">Stocks</label>
                  <br>
                <input type="number" name="Stock" class="stocksField"style="width: 18rem;" />
            </div>
          
             <style>
              .stocksField{
                position: relative;
                top: 27px;
                left: -50px;
                width: 18px;
                height: 35px;
                border-radius: 5px;
                
              }
            </style>
            <div class="form-group">
                <label name="" class="control-label">Price</label>
                <input name="Price" class="priceField" style="width: 18rem;" />
            </div>
            <br>
             <style>
              .priceField{
                position: relative;
                top: 27px;
                left: -38px;
                width: 18px;
                height: 35px;
                border-radius: 5px;
                
              }
            </style>
            <div class="form-group">
                <label name="Status" class="control-label">Status</label>
                <br>
                <input name="Status" class="form-check-input stat" type="checkbox" value="Active" id="flexCheckChecked"/>
                <label class="form-check-label" for="flexCheckChecked">Active</label>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <!--<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>!-->
        <button type="button" class="btn btn-success" data-bs-dismiss="modal" id="saveProdBtn" >Save Changes</i></button>
      </div>
    </div>
  </div>
</div>

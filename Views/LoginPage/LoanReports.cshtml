<script>
    // Function to fetch and populate data (replace this with your data-fetching logic)
    async function fetchData() {
        try {
            // Example: Fetch data from an API
            const response = await fetch('https://api.example.com/reports');
            const data = await response.json();

            // Call function to populate the report with the fetched data
            generateReport(data);
        } catch (error) {
            console.error('Error fetching data:', error);
        }
    }

    // Function to populate the table with data
    function generateReport(data) {
        var tbody = document.getElementById('report-body');

        data.forEach(function(entry) {
            var row = tbody.insertRow();
            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            var cell3 = row.insertCell(2);

            cell1.textContent = entry.date;
            cell2.textContent = entry.category;
            cell3.textContent = entry.amount;
        });
    }

    // Call the function to fetch data and generate the report
    fetchData();
</script>


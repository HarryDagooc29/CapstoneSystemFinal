            function calculateMonthlyRepayment(P, r, n) {
                const monthlyInterest = r / 12; // Assuming the interest is an annual rate
                const power = Math.pow(1 + monthlyInterest, n);
                const repayment = (P * monthlyInterest * power) / (power - 1);
                return repayment;
            }




<body>
  
<script>
    function redirectToHome() {
        // Display SweetAlert confirmation before redirecting
        Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to go to the home page.',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#4ac4b6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, go to Home!',
        }).then((result) => {
            if (result.isConfirmed) {
                // If confirmed, redirect to the home page
                window.location.href = '/LoginPage/HomePage';
            }
        });
    }
</script>


<div>
      <button type="button" onclick="redirectToHome()" class="btn btn-outline-warning buttonHome" title="Home"> 
    <i class="fa-solid fa-house" style="color: #4ac4b6;"></i> Home
</button>
</div>

<style>
    .buttonHome{
        position: absolute;
        top: 80px;
        left: 120px;
        background-color: green;
        font-size: 20px;
    }
</style>

<div>
    <h1 class="capital">Capital Addition Loan</h1>

   <div class="container">
    <p>Need additional capital for your business or personal needs? We've got you covered!</p>
    <p>Enter the amount you need below and click 'Apply Now' to get started:</p>

    <form id="loanForm" class="small-form" method="post">
        <input type="number" id="capitalAmount" placeholder="Enter capital amount" required style="width: 100%;" required asp-for="CapitalAmount">
        <button type="button" value="Capital" onclick="applyCapital()" style="width: 100%;">Apply Now</button>
    </form>
    


</div>



    <script>
        function applyCapital() {
            // Get the loan amount from the input field
           // var formelements = $("#loanForm");
           // var formInputs = $("#loanForm").serializeArray();
            const capitalAmount = document.getElementById('capitalAmount').value;

            // Check if the loan amount is valid (you can add more validation here)
            if (capitalAmount.trim() === '' || isNaN(capitalAmount)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Input',
                    text: 'Please enter a capital loan amount.',
                });
                return;
            }

            // If the input is valid, show a confirmation popup
            Swal.fire({
                icon: 'success',
                title: 'Loan Application Submitted!',
                text: `You have successfully applied for a capital amount of  â‚±${capitalAmount}.`,
            });

            // You can add additional logic here to submit the form to your server
            // For example, using AJAX to send the data to a server-side script
        }
    </script>

    




        border: 2px solid white;
        border-radius: 10px;
        max-width: 650px;
        min-width: 200px;
        align-items: center;
        justify-content: center;
        margin: auto;
        background-color: white;
    }

    body {
        background: teal;
    }

    .nameDiv {
        padding: 2px;
        width: 300px;
        border-radius: 10px;
    }

    .inputNameLabel {
        font-weight: bold;
    }

    h2 {
        margin-top: 10px;
    }

    .button {
        padding: 2px;
        border-radius: 10px;
        width: 180px background-color: black;
        border: none;
        align-items: center;
        justify-content: center;
    }

    .button:hover {
        background-color: darkkhaki;
    }

    .butIndex a {
        padding: 7px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        border: 2px solid mediumseagreen;
